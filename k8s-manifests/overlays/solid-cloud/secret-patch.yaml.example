apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
type: Opaque
data:
  # ‚ö†Ô∏è REPLACE ALL VALUES WITH YOUR OWN BASE64-ENCODED SECRETS
  # Generate with: echo -n "your-secret" | base64

  # PostgreSQL Credentials
  # Example: echo -n "postgres" | base64
  POSTGRES_USER: cG9zdGdyZXM=

  # ‚ö†Ô∏è CHANGE THIS: Use a strong password!
  # Example: echo -n "$(openssl rand -base64 32)" | base64
  POSTGRES_PASSWORD: Q0hBTkdFX1RISVNfU0VDVVJFX1BBU1NXT1JE

  # JWT Secret Key for authentication
  # Example: echo -n "production-jwt-secret-$(openssl rand -hex 32)" | base64
  JWT_SECRET_KEY: Q0hBTkdFX1RISVNfSldUX1NFQ1JFVA==

  # Internal API Secret
  # Example: echo -n "production-api-secret-$(openssl rand -hex 32)" | base64
  INTERNAL_API_SECRET: Q0hBTkdFX1RISVNfQVBJX1NFQ1JFVA==

# üîê SECURITY CHECKLIST:
# [ ] Changed POSTGRES_PASSWORD to a strong, unique password
# [ ] Generated new JWT_SECRET_KEY
# [ ] Generated new INTERNAL_API_SECRET
# [ ] Verified this file is in .gitignore
# [ ] Stored backup of secrets in secure password manager
