# Terraform Variables for Solid Cloud Environment
# Copy this file to terraform.tfvars and update with actual values

# Cluster Configuration
cluster_name       = "titanium-cluster"
node_count         = 3
node_instance_type = "t3.medium"

# Network Configuration
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24", "10.0.13.0/24"]

# PostgreSQL Configuration
postgres_version      = "15-alpine"
postgres_storage_size = "10Gi"
postgres_password     = "CHANGE_THIS_SECURE_PASSWORD"  # ⚠️ Update with strong password

# Kubernetes Provider Configuration
kubeconfig_path = "~/.kube/config"  # Path to your kubeconfig file

# Or use explicit configuration (comment out kubeconfig_path if using this)
# kubernetes_host                   = "https://solid-cloud-k8s-endpoint"
# kubernetes_client_certificate     = "base64-encoded-cert"
# kubernetes_client_key             = "base64-encoded-key"
# kubernetes_cluster_ca_certificate = "base64-encoded-ca"

# Environment Tags
environment = "production"
project     = "titanium"
managed_by  = "terraform"
